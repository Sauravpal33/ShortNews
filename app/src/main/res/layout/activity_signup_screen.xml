<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.SignupScreen">

    <ImageView
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:id="@+id/imageView"
        android:layout_width="142dp"
        android:layout_height="208dp"
        app:srcCompat="@drawable/newspaper" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Sign Up" />

    <EditText
        android:layout_marginTop="30dp"
        android:background="@drawable/radius"
        android:id="@+id/signuUppagename"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:drawableLeft="@drawable/baseline_account_circle_24"
        android:layout_marginHorizontal="20dp"
        android:hint="Name" />

    <EditText
        android:layout_marginTop="10dp"
        android:background="@drawable/radius"
        android:id="@+id/signUppageemail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:drawableLeft="@drawable/baseline_email_24"
        android:layout_marginHorizontal="20dp"
        android:hint="Email" />

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/signUppagepassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:ems="10"
        android:paddingRight="20dp"
        android:drawableRight="@drawable/baseline_remove_red_eye_24"
        android:background="@drawable/radius"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:inputType="text"
        android:hint="Password" />

    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/signUpbtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textStyle="bold"
        android:background="@drawable/buttoncolor"
        android:layout_marginHorizontal="110dp"
        android:text="Sign Up"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:textSize="15dp"
            android:text="Already have an Account !" />

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_marginHorizontal="10dp"
            android:textStyle="bold"
            android:textSize="20dp"/>

    </LinearLayout>

</LinearLayout>